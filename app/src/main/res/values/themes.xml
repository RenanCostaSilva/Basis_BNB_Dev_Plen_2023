<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TesteBNB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TesteBNB" parent="Base.Theme.TesteBNB" />



    <style name="Theme.materialbutton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>
    <style name="buttonStyleDisable" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@color/white</item>
    </style>


    <style name="Theme.TesteBNBMain" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Color Primary Dark -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bnb_main</item>

        <!-- Text Color Primary -->
         <item name="android:textColorPrimary">@color/bnb_main</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/bnb_main</item>

    </style>

    <style name="Theme.TesteBasis" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Color Primary Dark -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/basis_main</item>

        <!-- Text Color Primary -->
        <item name="android:textColorPrimary">@color/basis_main</item>

        <!-- Navigation Bar Color -->
        <item name="android:navigationBarColor">@color/basis_main</item>

    </style>

    <style name="Theme.NoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/basis_main</item>
        <item name="android:colorPrimary" tools:targetApi="l">@color/bnb_main</item>
        <item name="android:textColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="Theme.Sky_NoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bnb_main</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/basis_main</item>
    </style>



</resources>